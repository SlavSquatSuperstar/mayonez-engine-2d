#!/bin/sh

# Script Name: run
# Purpose:     Builds and runs the project for Unix (macOS/Linux) users
#              or Windows users with Windows Subsystem for Linux installed.
# Usage:       ./run [-h/--help] [-n/--nobuild] [-e/--engine gl/awt]"
# Author:      SlavSquatSuperstar

# Navigate to the project directory
SCRIPT_DIR=$(dirname "$0")
cd "$SCRIPT_DIR" || exit

# Initialize variables
skip_build=false
use_gl=true
is_mac_os=false

# Functions

# Show help and exit with a code
show_help() {
  echo "Usage: ./run [-h/--help] [-n/--nobuild] [-e/--engine gl/awt]"
  exit "$1"
}

# Configure the program to run using GL/AWT
set_engine_type() {
  if [ "$1" = "gl" ]; then
    use_gl=true
  elif [ "$1" = "awt" ]; then
    use_gl=false
  elif [ "$1" = "" ]; then
    'Option "--engine" requires one argument'
    show_help 1
  else
    echo "Invalid engine type \"$1\"."
    show_help 1
  fi
}

# Launch the jar with VM and CL args
run_jar() {
  if [ "$2" ]; then
    java "$2" -jar build/libs/mayonez*.jar "--engine" "$1"
  else
    java -jar build/libs/mayonez*.jar "--engine" "$1"
  fi
  exit $?
}

# Parse user arguments
while :; do
  case $1 in
  --help | -h)
    show_help 0
    ;;
  --nobuild | -n)
    skip_build=true
    ;;
  --engine | -e)
    if [ "$2" ]; then
      set_engine_type "$2"
      shift
    else
      echo 'Option "--engine" requires one argument'.
      show_help 1
    fi
    ;;
  "")
    # End of arguments
    break
    ;;
  *)
    echo "Invalid option \"$1\"".
    show_help 1
    ;;
  esac
  shift
done

# Check if Java is installed
if [ "$(java --version)" ]; then
  echo "Java is installed."
else
  echo "Please install Java to run this program."
  exit 1
fi

# Check operating system
# shellcheck disable=SC2039
case "$OSTYPE" in
"linux-gnu"*)
  echo "Detecting GNU/Linux."
  ;;
"darwin"*)
  echo "Detecting macOS."
  is_mac_os=true
  ;;
"cygwin"* | "mingw"* | *"msys")
  echo "Detecting Windows Subsystem for Linux."
  echo "You should use run.ps1/run.bat if WSL is not installed."
  ;;
*)
  echo "Unknown operating system detected."
  ;;
esac

# Build the application for Unix
if ! "$skip_build"; then
  echo "Building Mayonez Engine..."
  if [ "$(./gradlew clean shadowJar)" ]; then
    echo "Successfully built Mayonez Engine."
  else
    echo "Error building Mayonez Engine."
    exit 1
  fi
else
  echo "Skipping build."
fi

# Run the compiled .jar file
if $use_gl; then
  echo "Launching with OpenGL Engine."
  if $is_mac_os; then
    # LWJGL requires a special argument on macOS
    run_jar "gl" "-XstartOnFirstThread"
  else
    run_jar "awt"
  fi
else
  echo "Launching with AWT Engine."
  run_jar "awt"
fi
